<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dota.pearl17">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.ActionBar.Transparent">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EventsHomeActivity"
            android:theme="@style/EventsTheme" />
        <activity
            android:name=".EventsShowMoreActivity"
            android:theme="@style/EventsTheme" />
        <activity
            android:name=".EventDetailsActivity"
            android:theme="@style/EventsTheme" />
        <activity
            android:name=".ProShowActivity"
            android:theme="@style/ProShowTheme" />
        <activity
            android:name=".TalksActivity"
            android:theme="@style/TalksTheme" />
        <activity android:name=".RegistrationActivity" />
        <activity android:name=".SponsorsActivity" />
        <activity android:name=".ClubEventsActivity"/>
        <activity android:name=".Schedule_activity"/>
        <activity android:name=".GuideActivity"/>
        <activity android:name=".AboutUsActivity"/>
        <activity android:name=".ReachUsActivity"/>
        <activity android:name=".CampusMapActivity"/>
        <activity android:name=".ContactActivity"/>
        <activity android:name=".MapsActivity"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

</manifest>