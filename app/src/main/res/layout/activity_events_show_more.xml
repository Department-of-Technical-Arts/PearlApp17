<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:background="@color/custom_red"
        android:id="@+id/events_topbar"
        android:layout_width="match_parent"
        android:layout_height="72dp" />

    <TextView
        android:id="@+id/show_less"
        android:layout_below="@id/events_topbar"
        android:layout_marginTop="12dp"
        android:background="@drawable/border_rect_red"
        android:drawableLeft="@drawable/arrows"
        android:drawableTint="@color/custom_red"
        android:drawablePadding="12dp"
        android:text="SHOW LESS"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:textColor="@color/custom_red"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:onClick="showLess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:overScrollMode="never"
        android:id="@+id/recycler_more_categories"
        android:layout_below="@id/show_less"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:background="@color/custom_red"
        android:layout_below="@id/events_topbar"
        android:layout_alignParentLeft="true"
        android:layout_width="8dp"
        android:layout_height="match_parent"/>
    <View
        android:background="@color/custom_red"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="16dp"/>
    <View
        android:background="@color/custom_red"
        android:layout_below="@id/events_topbar"
        android:layout_alignParentRight="true"
        android:layout_width="8dp"
        android:layout_height="match_parent"/>
</RelativeLayout>