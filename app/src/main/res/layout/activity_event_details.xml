<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center_horizontal"
    android:foregroundGravity="center_horizontal"
    android:gravity="center_horizontal"
    tools:context="com.dota.pearl17.EventDetailsActivity">

    <ImageView
        android:id="@+id/bg_club_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/event_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/event_title_border_red"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="#E3556B"
        android:textSize="36sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_title"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="30dp"
        android:foregroundGravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_prize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#E3556B"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/event_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#E3556B"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/event_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#E3556B"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/border_item_club_event"
        android:gravity="center_horizontal"
        android:onClick="rules"
        android:padding="15dp"
        android:text="DOWNLOAD RULES"
        android:textColor="@android:color/white"
        android:textSize="24sp" />


</RelativeLayout>
