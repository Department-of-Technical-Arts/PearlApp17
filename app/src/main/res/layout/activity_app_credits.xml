                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="156dp"
                android:padding="8dp"
                android:textAllCaps="true"
                android:text="Designed by"
                android:textSize="20sp"
                android:textColor="#000000" />

            <ImageView
