                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="-20dp"
                android:scaleX="0.4"
                android:scaleY="0.4"
                android:src="@drawable/dota_black" />

            <ImageView
                android:id="@+id/Developers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dota"
                android:layout_marginTop="-52dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="-102dp"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:src="@drawable/developers_title" />

            <ImageView
                android:id="@+id/DevelopersTemplate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Developers"
                android:layout_marginBottom="-33dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="-50dp"
                android:onClick="openBrowser"
                android:scaleX="0.84"
                android:scaleY="0.84"
                android:src="@drawable/akhil"
                android:tag="https://www.facebook.com/c.akhil.shri?fref=ts" />

            <ImageView
                android:id="@+id/DevelopersTemplate2"
                android:layout_width="wrap_content"
